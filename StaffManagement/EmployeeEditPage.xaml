<Page x:Class="StaffManagement.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StaffManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeeEditPage">

    <Grid>
        <StackPanel>
            <Label Content="ID:" Height="40"/>
            <TextBox x:Name="txtID" Height="40" />
            <Label Content="ФИО:" Height="40"/>
            <TextBox x:Name="txtName" Height="40" />
            <Label Content="Возраст:" Height="40"/>
            <TextBox x:Name="txtAge" Height="40"/>
            <Label Content="Зарплата:" Height="40"/>
            <TextBox x:Name="txtCurrPay" Height="40"/>

            <Button Content="Сохранить" Height="40" Margin="0,40,0,0" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Page>
